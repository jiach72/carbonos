name: Deploy to Production

on:
  push:
    branches: [ "main" ]
  workflow_dispatch:

env:
  REGISTRY: ghcr.io
  IMAGE_NAME: ${{ github.repository }}

jobs:
  build-and-push:
    runs-on: ubuntu-latest
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Log in to the Container registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build and push Frontend
        uses: docker/build-push-action@v5
        with:
          context: ./carbonos
          file: ./carbonos/docker/frontend.Dockerfile
          push: true
          tags: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}-frontend:latest

      - name: Build and push Backend
        uses: docker/build-push-action@v5
        with:
          context: ./carbonos/backend
          file: ./carbonos/docker/backend.Dockerfile
          push: true
          tags: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}-backend:latest

  deploy:
    needs: build-and-push
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Log in to the Container registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Copy Config to Server
        uses: appleboy/scp-action@master
        with:
          host: ${{ secrets.SERVER_HOST }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          port: ${{ secrets.SERVER_PORT }}
          # Only copy config, no tarballs
          source: "docker-compose.prod.yml,nginx/nginx.conf"
          target: "~/apps/carbonos/"
          timeout: 5m

      - name: Execute deployment commands
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.SERVER_HOST }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          port: ${{ secrets.SERVER_PORT }}
          command_timeout: 60m # Increase timeout for slow GHCR connection
          script: |
            cd ~/apps/carbonos
            
            echo "=== Step 1: Config Move ==="
            if [ -f "nginx/nginx.conf" ]; then
                mv nginx/nginx.conf ./nginx.conf
                rm -rf nginx
                echo "Moved nginx.conf"
            fi
            
            echo "=== Step 2: Generate Secrets ==="
            if [ ! -f .env ]; then
                echo "SECRET_KEY=$(openssl rand -hex 32)" > .env
                echo "Created new .env with SECRET_KEY"
            else
                if ! grep -q "SECRET_KEY" .env; then
                    echo "SECRET_KEY=$(openssl rand -hex 32)" >> .env
                    echo "Appended SECRET_KEY to existing .env"
                else
                    echo ".env already contains SECRET_KEY"
                fi
            fi
            
            echo "=== Step 3: Verify .env file ==="
            cat .env | head -c 100
            echo ""
            
            echo "=== Step 4: Docker Login ==="
            echo ${{ secrets.GITHUB_TOKEN }} | sudo docker login ghcr.io -u ${{ github.actor }} --password-stdin
            
            echo "=== Step 5: Replace namespace variable ==="
            sed -i 's/${GITHUB_REPOSITORY_OWNER}/${{ github.repository_owner }}/g' docker-compose.prod.yml
            
            echo "=== Step 6: Stop existing services ==="
            sudo docker compose -f docker-compose.prod.yml down || true
            
            echo "=== Step 7: Pull Images ==="
            sudo docker compose --env-file .env -f docker-compose.prod.yml pull -q
            
            echo "=== Step 8: Start infrastructure (postgres, redis, influxdb) ==="
            sudo docker compose --env-file .env -f docker-compose.prod.yml up -d postgres redis influxdb
            sleep 10
            
            echo "=== Step 9: Check postgres health ==="
            sudo docker compose -f docker-compose.prod.yml exec -T postgres pg_isready -U carbonos || echo "Postgres not ready"
            
            echo "=== Step 10: Start backend (without waiting for health) ==="
            sudo docker compose --env-file .env -f docker-compose.prod.yml up -d --no-deps backend
            sleep 15
            
            echo "=== Step 11: Check backend logs ==="
            sudo docker compose -f docker-compose.prod.yml logs backend --tail=50
            
            echo "=== Step 12: Check backend health manually ==="
            curl -s http://localhost:8000/health || echo "Backend health check failed"
            
            echo "=== Step 13: Start frontend and nginx ==="
            sudo docker compose --env-file .env -f docker-compose.prod.yml up -d --no-deps frontend
            sleep 5
            sudo docker compose --env-file .env -f docker-compose.prod.yml up -d --no-deps nginx
            
            echo "=== Step 14: Container status ==="
            sudo docker compose -f docker-compose.prod.yml ps -a
            
            echo "=== Step 15: Migration ==="
            sudo docker compose --env-file .env -f docker-compose.prod.yml exec -T backend alembic upgrade head || echo "Migration failed or skipped"
            
            echo "=== Step 16: Cleanup ==="
            sudo docker image prune -f
            
            echo "=== Deployment Complete ==="
